        <div class="carousel-item active">
          <div class="seed"><%= cl_image_tag @board.photo.key, alt: "SURFBOARD"%></div>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?surfboard" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?surf" alt="Second slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
