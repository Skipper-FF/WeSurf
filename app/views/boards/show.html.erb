          <i class="fas fa-snowboarding mr-3"></i> <p><em><%= @board.category %></em></p>
        </div>

        <p><%= @board.description %></p>

          <% if policy(@board).edit? %>
            <%= link_to "Update", edit_board_path(@board) %>
          <% end %>

        <%= link_to "< Back", boards_path, class: "btn btn-ghost" %>
      </div>

    <div class="col-6" id="map"
     style="width: 600px; height: 300px; border-radius: 5px"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

<div class="card-book">
  <div class="form-wrapper">
    <%= simple_form_for [@board, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Book now", class: "btn" %>
    <% end %>
  </div>
</div>
